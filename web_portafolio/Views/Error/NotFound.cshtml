@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Página no encontrada";
    Layout = "~/Views/Shared/_Error.cshtml";
}

<div class="container">
    <div class="row">
        <div class="offset-xl-2 col-xl-8 offset-lg-2 col-lg-8 col-md-12 col-sm-12 col-12">
            <div class="error-section">
                <img src="~/Content/assets/images/logo.png" alt="" class="img-fluid">
                <div class="error-section-content">
                    <h1 class="display-5">Página No Encontrada</h1>
                    <p class="display-7"> Hemos detectado problemas con la URL </p>
                    <a href="@(Url.Action("Index", "Home"))" class="btn btn-secondary btn-lg">Volver al Inicio</a>
                </div>
            </div>
        </div>
    </div>
</div>
