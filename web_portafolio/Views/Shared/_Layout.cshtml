
@model web_portafolio.Models.ViewModelBase
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" type="text/css" href="../Content/assets/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="../Content/assets/vendor/fonts/circular-std/style.css">
    <link rel="stylesheet" type="text/css" href="../Content/assets/libs/css/style.css">
    <link rel="stylesheet" type="text/css" href="../Content/assets/vendor/fonts/fontawesome/css/fontawesome-all.css">
    <link rel="stylesheet" type="text/css" href="../Content/assets/vendor/bootstrap-select/css/bootstrap-select.css">
    <link rel="stylesheet" type="text/css" href="../Content/assets/vendor/inputmask/css/inputmask.css">
    <link rel="stylesheet" type="text/css" href="../Content/DatePicker/css/bootstrap-datepicker.min.css">
    <link rel="stylesheet" type="text/css" href="../Content/FileUpload/dist/css/file-upload.css">
    <link rel="stylesheet" type="text/css" href="../Content/SelectSearch/css/bootstrap-select.min.css">
    <link rel="stylesheet" type="text/css" href="../Content/assets/vendor/charts/morris-bundle/morris.css">
    <link rel="stylesheet" type="text/css" href="../Content/assets/vendor/fonts/material-design-iconic-font/css/materialdesignicons.min.css">
    <link rel="stylesheet" type="text/css" href="../Content/assets/vendor/fonts/flag-icon-css/flag-icon.min.css">
    <link rel="stylesheet" type="text/css" href="../Content/DataTables/dataTables.css">
    <link rel="stylesheet" type="text/css" href="../Content/assets/vendor/datatables/css/dataTables.bootstrap4.css">
    <link rel="stylesheet" type="text/css" href="../Content/assets/vendor/datatables/css/buttons.bootstrap4.css">
    <link rel="stylesheet" type="text/css" href="../Content/assets/vendor/datatables/css/select.bootstrap4.css">
    <link rel="stylesheet" type="text/css" href="../Content/assets/vendor/datatables/css/fixedHeader.bootstrap4.css">
    <!-- Optional JavaScript -->
    <script src="../Content/assets/vendor/jquery/jquery-3.3.1.min.js"></script>
    <script src="../Content/assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="../Content/assets/vendor/slimscroll/jquery.slimscroll.js"></script>
    <script src="../Content/assets/libs/js/main-js.js"></script>
    <script src="../Content/DataTables/dataTables.js"></script>
    <script src="../Content/assets/vendor/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="../Content/assets/vendor/datatables/js/dataTables.buttons.min.js"></script>
    <script src="../Content/assets/vendor/datatables/js/buttons.bootstrap4.min.js"></script>
    <script src="../Content/assets/vendor/datatables/js/buttons.html5.min.js"></script>
    <script src="../Content/assets/vendor/datatables/js/buttons.print.min.js"></script>
    <script src="../Content/assets/vendor/datatables/js/dataTables.fixedHeader.min.js"></script>
    <script src="../Content/assets/vendor/datatables/js/buttons.colVis.min.js"></script>
    <script src="../Content/assets/vendor/datatables/js/dataTables.rowGroup.min.js"></script>
    <script src="../Content/assets/vendor/bootstrap-select/js/bootstrap-select.js"></script>
    <script src="../Content/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="../Content/assets/vendor/charts/sparkline/jquery.sparkline.js"></script>
    <script src="../Content/assets/vendor/inputmask/js/jquery.inputmask.bundle.js"></script>
    <script src="../Content/DatePicker/js/bootstrap-datepicker.min.js"></script>
    <script src="../Content/DatePicker/locales/bootstrap-datepicker.es.min.js"></script>
    <script src="../Content/FileUpload/dist/js/file-upload.js"></script>
    <script src="../Content/FileUpload/run_prettify.js"></script>
    <script src="../JS/Utils.js"></script>
    <script src="../Content/SelectSearch/js/bootstrap-select.min.js"></script>
    <script src="../Content/SelectSearch/js/i18n/defaults-es_CL.min.js"></script>
    <script src="../Content/Highcharts/highcharts.js"></script>
    <script src="../Content/Highcharts/exporting.js"></script>
    <script src="../Content/assets/vendor/charts/morris-bundle/raphael.min.js"></script>
    <script src="../Content/assets/vendor/charts/morris-bundle/morris.js"></script>
    @RenderSection("scripts", required: false)
    <style>

        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background: none;
            color: black !important;
            border: 0px;
        }


        .dataTables_wrapper .dataTables_paginate .paginate_button:active {
            background: none;
            color: black !important;
        }
    </style>
</head>
<body>
    <script>
        var baseUrl = '@Request.Url.Scheme' + '://' + '@Request.Url.Authority';
        const Toast = Swal.mixin({
            toast: true,
            position: 'top-end',
            showConfirmButton: false,
            timer: 2000
        });
    </script>
    <div class="dashboard-main-wrapper">
        <!-- navbar -->
        <div class="dashboard-header">
            <nav class="navbar navbar-expand-lg bg-white fixed-top" style="max-height:68px;">
                <a class="navbar-brand"><img src="~/Content/assets/images/logo.png" alt="" style="height:40px;">&nbsp; Portafolio</a>
            </nav>
        </div>
        <!-- lesft sidebar -->
        <div class="nav-left-sidebar sidebar-dark">
            <div class="menu-list">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <a class="d-xl-none d-lg-none" href="#">Dashboard</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav flex-column">
                            <li class="nav-divider">
                            <li class="nav-item ">
                                <h5 class="mb-0 text-white nav-user-info">
                                    @Model.Name<br />
                                    @Model.Email
                                </h5>
                            </li>
                            <li class="nav-divider">
                            <li class="nav-divider">
                                Menu
                            </li>
                            <li class="nav-item ">
                                <a class="nav-link active" href="@(Url.Action("Index", "Home"))"><i class="fa fa-fw fa-home"></i>Inicio <span class="badge badge-success">6</span></a>
                            </li>
                            <li class="nav-divider">
                            <li class="nav-item ">
                                @if (Model.Modules.Contains("5")) {
                                    <a class="nav-link active" href="#"><i class="fa fa-fw fa-search"></i>Alertas <span class="badge badge-success">6</span></a>
                                }
                                @if (Model.Modules.Contains("1")) {
                                    <a class="nav-link active" href="~/Tasks/Create"><i class="fa fa-fw fa-file-archive"></i>Crear Tarea<span class="badge badge-success">6</span></a>
                                }
                                @if (Model.Modules.Contains("2")) {
                                    <a class="nav-link active" href="~/Tasks/Index"><i class="fa fa-fw fa-file-archive"></i>Tareas <span class="badge badge-success">6</span></a>
                                }
                                @if (Model.Modules.Contains("4")) {
                                    <a class="nav-link active" href="#"><i class="fa fa-fw fa-search"></i>Procesos <span class="badge badge-success">6</span></a>
                                }
                                @if (Model.Modules.Contains("3")) {
                                    <a class="nav-link active" href="#"><i class="fa fa-fw fa-search"></i>Backlog <span class="badge badge-success">6</span></a>
                                }

                            </li>
                            <li class="nav-divider">
                            <li class="nav-item">
                                <a class="nav-link active" href="@(Url.Action("ChangePass", "Auth"))"><i class="fas fa-cog mr-2"></i>Cambiar Contraseña</a>
                                <a class="nav-link active" href="@(Url.Action("Logout", "Auth"))"><i class="fas fa-power-off mr-2"></i>Cerrar Sesión</a>
                            </li>
                            <li class="nav-divider">
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
        <div class="dashboard-wrapper">
            <div class="container-fluid dashboard-content ">
                @RenderBody()
            </div>
        </div>
    </div>
    @ModalLoading.Modal();
</body>
</html>
