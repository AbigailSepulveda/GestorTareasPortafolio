@model SGM_INSPECCION_DIGITAL.Models.HomeViewModel
@{
    ViewBag.Title = "Cambiar Contraseña";
}

<div class="row">
    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-12">
    </div>
    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
        <div class="card">
            <div class="card-header">
                <div class="form-row">
                    <h4>Cambiar Contraseña</h4>
                </div>
            </div>
            <div class="card-body">
                @using (Html.BeginForm()) {
                    @*@Html.HiddenFor(x => x.Rut)*@
                    <div class="form-group">
                        @Html.PasswordFor(u => u.Password, new { @class = "form-control form-control-lg",
                       @autocomplete = "off", @placeholder = "Contraseña" })<br />
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.RepeatPassword, new { @class = "form-control form-control-lg",
                       @placeholder = "Repita Contraseña" })
                    </div>

                    <div class="form-group" align="right">
                        @Html.ValidationMessage("error", new { @class = "text-danger", @style = "margin-top:30px;", @aling = "right" })
                        @Html.ValidationMessage("correct", new { @class = "text-success", @style = "margin-top:30px;", @aling = "right" })
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg btn-block" style="margin-top:10px;">Cambiar</button>
                }
            </div>
        </div>
        <div id="sparkline-revenue"></div>
    </div>
    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-12">
    </div>
</div>


